{
  "name": "calendar-service-poc",
  "version": "1.0.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "prebuild": "node -e \"require('./tsoaFunctions.js').generate()\"",
    "build": "tsc",
    "postbuild": "copyfiles -f ./src/public/* ./build/public/ && node -e \"require('./tsoaFunctions.js').copySwaggerJson()\"",
    "prestart": "npm run build",
    "start": "node .",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint-CI": "npm run lint -- -o reports/linter.json --format json || echo 'linter exited with errors' && exit 0",
    "test": "mocha --package ./package.json './src/**/*.test.ts'",
    "test-CI": "nyc --reporter=lcov npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mocha": "^7.0.1",
    "@types/morgan": "^1.7.37",
    "@types/proxyquire": "^1.3.28",
    "@types/request": "^2.48.4",
    "@types/sinon": "^7.5.1",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.20.0",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "@types/mongodb": "^3.3.16",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.4",
    "morgan": "^1.9.1",
    "request": "^2.88.2",
    "swagger-ui-express": "^4.1.3",
    "tsoa": "^2.5.13"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "**/tsOpenApi/*"
    ]
  },
  "mocha": {
    "exit": true,
    "recursive": true,
    "extension": ".test.ts",
    "require": [
      "ts-node/register"
    ]
  }
}
